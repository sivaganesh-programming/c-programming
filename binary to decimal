#include <stdio.h>
#include <math.h>

int main() {
    long long n;
    int decimal = 0, i = 0, remainder;

    printf("Enter binary number: ");
    scanf("%lld", &n);

    while(n != 0) {
        remainder = n % 10;
        decimal += remainder * pow(2, i);
        n /= 10;
        i++;
    }

    printf("Decimal = %d", decimal);
    return 0;
}
